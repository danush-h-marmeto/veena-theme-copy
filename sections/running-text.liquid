{{ 'runnig-text.css' |  asset_url |  stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }
  @media only screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
 
{%- endstyle -%}

<div class="scrolling-banner padding-{{ section.id}}">
    <div class="scrolling-banner__scrolling-wrapper">
        <div class="scrolling-banner__scrolling-items-wrapper">
                {% for block in section.blocks %}
                    <div class="scrolling-banner__scrolling-item">
                        <div class="scrolling-banner__icon-wrapper">
                            {% if block.settings.scrolling_item_icon != blank %}
                                {{block.settings.scrolling_item_icon }}
                            {% endif %}
                        </div>
                        <div class="scrolling-banner__scrolling-text">
                            {{block.settings.scrolling_text}}
                        </div>
                        
                            {% if block.settings.button_text != blank %}
                                <a class="scrolling-banner__plain-button" href= '{{block.settings.button_url}}'>
                                    <span>
                                        {{ block.settings.button_text}}
                                    </span>
                                </a>
                            {% endif %}
                    </div>
                {% endfor %}
        </div>
    </div>
</div>
{% schema %} 
{
  "name": "Running Text",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "background-color",
      "label": "Background color",
      "info": "Choose the background color"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Running Block",
      "type": "running-",
      "settings": [
        {
          "type": "html",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title" 
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Running Text"
    }
  ]
}
{% endschema %}

        "options": [
            {
            "value": "square",
            "label": "Square"
            },
            {
            "value": "landscape",
            "label": "Landscape"
            },
            {
            "value": "portrait",
            "label": "Portrait"
            }
          ]
        },
        {
          "type": "text",
          "id": "tagline_text",
          "label": "Tag Line Text",
          "default": "Tag Goes Here"
        },
        {
          "type": "color",
          "id": "tagline_color",
          "label": "Tag Line color",
          "default": "#fff"
        },
        {
          "type": "richtext",
          "id": "heading_text",
          "label": "Heading Text"
        },
        {
          "type": "color",
          "id": "heading_text_color",
          "label": "Heading Text color",

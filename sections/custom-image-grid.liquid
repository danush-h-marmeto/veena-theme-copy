          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_type",
          "label": "Choose Button Type",
          "default": "primary",
          "info": "Choose Between the Customized Buttons to Style the Button",
          "options": [
            {
            "value": "primary",
            "label": "Primary"
            },
            {
            "value": "secondary",
            "label": "Secondary"
            },
            {
            "value": "secondary_color",
            "label": "Tertiary"
            }
          ]
        },
         {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "default": "middle-center",
      "options": [
        {
          "value": "top-left",
          "label": "Top Left"
        },
        {
          "value": "top-center",
          "label": "Top Center"
        },
        {
          "value": "top-right",
          "label": "Top Right"
        },
        {
          "value": "middle-left",
          "label": "Middle Left"
        },
        {
          "value": "middle-center",
          "label": "Middle Center"
        },
        {
          "value": "middle-right",
          "label": "Middle Right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom-center",
          "label": "Bottom Center"
        },
        {
          "value": "bottom-right",
          "label": "Bottom Right"
        }
      ]
    },
          {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "start",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image with Grids"
    }
  ]
}
{% endschema %}
